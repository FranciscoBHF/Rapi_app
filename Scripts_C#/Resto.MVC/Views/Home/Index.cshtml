@{
    ViewData["Title"] = "Home Page";
}

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <h1>Tu mejor opción somos nosotros</h1>
                <p>Somos una empresa dedicada al servicio de comida.</p>
            </div>
            <div class="col-md-6">
                <img id="mainImage" src="https://s1.abcstatics.com/media/gurmesevilla/2014/10/hamburguesas.jpg" alt="Descripción de la imagen" width="500">
                <div class="arrow-container">
                    <button id="leftArrow" class="arrow-btn"><i class="fas fa-arrow-left"></i></button>
                    <button id="rightArrow" class="arrow-btn"><i class="fas fa-arrow-right"></i></button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            var currentImage = 'https://s1.abcstatics.com/media/gurmesevilla/2014/10/hamburguesas.jpg';
            $('#leftArrow').click(function() {
                currentImage = 'https://s3.abcstatics.com/media/gurmesevilla/2012/01/comida-rapida-casera.jpg';
                $('#mainImage').attr('src', currentImage);
                $(this).addClass('active');
                $('#rightArrow').removeClass('active');
            });
            $('#rightArrow').click(function() {
                currentImage = 'https://s1.abcstatics.com/media/gurmesevilla/2014/10/hamburguesas.jpg';
                $('#mainImage').attr('src', currentImage);
                $(this).addClass('active');
                $('#leftArrow').removeClass('active');
            });
        });
    </script>

    <style>
        .arrow-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }
        .arrow-btn {
            background-color: #2dc7a1;
            border: none;
            padding: 10px 15px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .arrow-btn:hover {
            background-color: #e9ecef;
        }
        .arrow-btn.active {
            background-color: #007bff;
            color: white;
        }
    </style>
</body>
