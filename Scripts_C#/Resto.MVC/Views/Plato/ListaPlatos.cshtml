@using Biblioteca
@model IEnumerable<Plato>

<h1>Platos</h1>

<table>
    <tr>
        <thead>
        Nombre
        </thead>
        <thead>
        Descripcion
        </thead>
        <thead>
        Disponibilidad
        </thead>
    </tr>
    @foreach (Plato plato in Model)
    {
        <tr>
        <td>
        @plato.plato
        </td>
        <td>
        @plato.descripcion
        </td>
        <td>
        @{
            if (plato.disponible) 
            "Disponible" ; else
            "Indisponible";
        }
        </td>
        </tr>
    }
        </table>
    </tbody>
