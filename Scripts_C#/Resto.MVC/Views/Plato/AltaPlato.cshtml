@model Resto.MVC.Controllers.Modal.PlatoModal

@{
    ViewData["Title"] = "Alta plato";
}
<div class="container">
    <form asp-action="AltaPlato" method="post" class="was-validated">
        <div class="row mb-2">
            <label for="text" class="col-sm-2 col-form-label">Nombre del plato</label>
            <div class="col-sm-10">
                <input type="text" id="plato" asp-for="plato" required placeholder="Ingrese el nombre del plato"
                    class="form-control">
                <div class="invalid-feedback">Por favor, ingrese un nombre v√°lido.</div>
            </div>
        </div>
        <div class="row mb-2">
            <label for="des" class="col-sm-2 col-form-label">Descripcion</label>
            <div class="col-sm-10">
                <input type="text" id="descripcion" asp-for="descripcion" required placeholder="Ingrese una Descripcion"
                    class="form-control">
                <div class="invalid-feedback">Este campo es requerido.</div>
            </div>
        </div>
        <div class="row mb-2">
            <label for="apellido" class="col-sm-2 col-form-label">Precio</label>
            <div class="col-sm-10">
                <input type="number" id="precio" asp-for="precio" required placeholder="Ingrese el precio"
                    class="form-control">
                <div class="invalid-feedback">Este campo es requerido.</div>
            </div>
        </div>
        <div class="row mb-2">
            <label for="password" class="col-sm-2 col-form-label">Disponibilidad</label>
            <div class="col-sm-10">
                <select asp-for="disponible" class="form-control">
                    <option value="True">Disponible</option>
                    <option value="False">No disponible</option>
                </select>
            </div>
        </div>
        <div class="row mb-2">
            <label for="idRestaurant" class="col-sm-2 col-form-label">Restaurante</label>
            <div class="col-sm-10">
                <select asp-for="idRestaurant" id="" class="form-control">
                    <option value="">Elija el restaurante</option>
                    @foreach (var restaurant in Model.restaurants)
                    {
                        <option value="@restaurant.idRestaurant">@restaurant.restaurante</option>
                    }
                </select>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </form>
</div>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary(true)
    </div>
}