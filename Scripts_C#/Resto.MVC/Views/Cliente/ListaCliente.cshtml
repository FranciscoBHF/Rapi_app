@using Biblioteca
@model IEnumerable<Cliente>

<!-- Buscar Cliente -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Clientes</h1>
    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
            <form class="d-flex" role="Buscar Cliente" asp-controller="BuscarCliente" asp-action="BuscarCliente"
                method="get">
                <input class="form-control me-2" type="text" placeholder="Buscar cliente" aria-label="Buscar cliente"
                    name="cadena">
                <button type="submit" class="btn btn-primary">Buscar</button>
            </form>
        </div>
    </nav>
</div>
<div class="container mt-3">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Email</th>
                <th>Cliente</th>
                <th>Apellido</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {

                <tr>
                    <td>
                        <a class="dropdown-item" asp-controller="cliente" asp-action="ObtenerDetalle"
                            asp-route-id="@cliente"><i class="bi bi-list-nested"></i>@cliente.cliente</a>
                    </td>
                    <td>@cliente.email</td>
                    <td>@cliente.cliente</td>
                    <td>@cliente.apellido</td>
                </tr>
            }
        </tbody>

    </table>
</div>
