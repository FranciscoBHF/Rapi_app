@using Biblioteca
@model IEnumerable<Restaurant>

<h1>Platos</h1>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #000;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
<table>
    <tr>
        <thead>
            Nombre
        </thead>
        <thead>
            Domicilio
        </thead>
        <thead>
            Email
        </thead>
    </tr>
        <thead>
            hola
        </thead>
            @foreach (var restaurant in Model)
            {
                <tr>
                    <td>@restaurant.restaurante</td>
                    <td>@restaurant.domicilio</td>
                    <td>@restaurant.email</td>
                </tr>
            }
